html
  head
    title E-Comm

    link(rel="stylesheet" href="/css/angular-material.css")
    link(rel="stylesheet" href="/css/app.css")

  body(ng-app='ecomm')
    div(layout="column" layout-fill ng-controller='HeaderController')
      ng-include(src="'header.html'")

      md-sidenav.md-sidenav-left(md-component-id='left')
        | Left Nav!

      md-content
        .gridListdemoBasicUsage(ng-controller='HomeController')
          md-grid-list(md-cols-sm='1', md-cols-md='2', md-cols-gt-md='6', md-row-height-gt-md='1:1', md-row-height='2:2', md-gutter='12x', md-gutter-gt-sm='8px')
            md-grid-tile.gray(ng-repeat="slide in slides" md-rowspan="1")
              md-grid-tile-footer
                h3(ng-bind='slide.name')

      md-sidenav.md-sidenav-right(md-component-id='right')
        ng-include(src="'cart_sidenav.html'")

    script(src="/socket.io/socket.io.js")
    script(src="/js/app.js")
